<div class="d-flex justify-content-between align-items-center mt-3">
    <div class="text-muted">
        Showing @StartItem to @EndItem of @TotalCount vehicles
    </div>

    <nav>
        <ul class="pagination mb-0">
            <li class="page-item @(HasPrevious ? "" : "disabled")">
                <button class="page-link" @onclick="() => OnPageChanged.InvokeAsync(1)"
                        disabled="@(!HasPrevious)">
                    First
                </button>
            </li>
            <li class="page-item @(HasPrevious ? "" : "disabled")">
                <button class="page-link" @onclick="() => OnPageChanged.InvokeAsync(CurrentPage - 1)"
                        disabled="@(!HasPrevious)">
                    Previous
                </button>
            </li>

            @foreach (var pageNum in GetPageNumbers())
            {
                var pageNumber = pageNum;
                <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                    <button class="page-link" @onclick="() => OnPageChanged.InvokeAsync(pageNumber)">
                        @pageNumber
                    </button>
                </li>
            }

            <li class="page-item @(HasNext ? "" : "disabled")">
                <button class="page-link" @onclick="() => OnPageChanged.InvokeAsync(CurrentPage + 1)"
                        disabled="@(!HasNext)">
                    Next
                </button>
            </li>
            <li class="page-item @(HasNext ? "" : "disabled")">
                <button class="page-link" @onclick="() => OnPageChanged.InvokeAsync(TotalPages)"
                        disabled="@(!HasNext)">
                    Last
                </button>
            </li>
        </ul>
    </nav>
</div>

@code {
    [Parameter] public int CurrentPage { get; set; }
    [Parameter] public int PageSize { get; set; }
    [Parameter] public int TotalCount { get; set; }
    [Parameter] public int TotalPages { get; set; }
    [Parameter] public bool HasPrevious { get; set; }
    [Parameter] public bool HasNext { get; set; }
    [Parameter] public EventCallback<int> OnPageChanged { get; set; }

    private int StartItem => (CurrentPage - 1) * PageSize + 1;
    private int EndItem => Math.Min(CurrentPage * PageSize, TotalCount);

    private IEnumerable<int> GetPageNumbers()
    {
        int start = Math.Max(1, CurrentPage - 2);
        int end = Math.Min(TotalPages, CurrentPage + 2);

        return Enumerable.Range(start, end - start + 1);
    }
}